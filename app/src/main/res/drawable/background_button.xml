<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/palette_blue_grey_50">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/default_padding_half"/>
            <solid android:color="@color/palette_blue_grey_50"/>
        </shape>
    </item>

    <item>
        <selector>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/default_padding_half"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/palette_blue_grey_500"/>
                    <solid android:color="@color/palette_blue_grey_700"/>
                </shape>
            </item>

            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="@dimen/default_padding_half"/>
                    <stroke
                        android:width="2dp"
                        android:color="@color/palette_blue_grey_300"/>
                    <solid android:color="@color/palette_blue_grey_500"/>
                </shape>
            </item>
        </selector>
    </item>

</ripple>

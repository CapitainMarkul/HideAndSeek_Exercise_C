<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <color android:color="@color/palette_blue_grey_700"/>
    </item>
    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <shape>
                <gradient
                    android:angle="90"
                    android:centerColor="@color/palette_ble_level_5"
                    android:endColor="@color/palette_ble_level_10"
                    android:startColor="@color/palette_ble_level_1"/>
            </shape>
        </clip>
    </item>
</layer-list>